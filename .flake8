[flake8]
# Maximum line length (matches Black formatter)
max-line-length = 88

# Temporarily suppress ALL flake8 warnings and errors
# This will be manually re-enabled later
# Note: Output is suppressed in Makefile, but keeping original config for reference
ignore =
    E402,
    F401,
    F403,
    F405,
    F541,
    W503,
    E741,
    E501

# Exclude files and directories
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    src/anima/globals/easybpy.py,  # Auto-generated file
    src/anima/.ideas,              # Experimental code

# Per-file ignores for specific cases
per-file-ignores =
    # Test files can have unused imports
    tests/*:F401
    # Visual test files often have unused variables for demonstration
    tests/visual_tests/*:F841
    # Main entry point may have imports not at top
    src/anima/main.py:E402,F401
    # Points module uses star imports intentionally
    src/anima/primitives/points.py:F403,F405
    # Polytopes module uses star imports intentionally  
    src/anima/primitives/polytopes.py:F403,F405
