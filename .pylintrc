[MASTER]
# Specify paths to ignore during linting
ignore-paths=
    src/anima/globals/easybpy.py,  # Auto-generated Blender Python wrapper
    src/anima/.ideas,              # Experimental code

# Specify additional Python path for import resolution
init-hook='import sys; sys.path.append("src")'

[MESSAGES CONTROL]
# Disable specific error types that are known false positives
; disable=
    ; syntax-error,           # E0001 - Disable syntax errors from binary modules
    ; wrong-import-position,  # C0413 - Imports might need specific ordering

# Maximum line length (matches Black formatter)
max-line-length=88

# Minimum similarity lines for duplicate code detection
min-similarity-lines=8
