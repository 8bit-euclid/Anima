{
    "name": "Anima DevContainer",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "runArgs": [
        "--name", "vsc-anima",
        "--privileged",
        "--network=host",
        "--env", "DISPLAY=${localEnv:DISPLAY}",
        "--mount", "type=bind,source=/tmp/.X11-unix,target=/tmp/.X11-unix,bind-propagation=rshared"
    ],
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
    "workspaceFolder": "/workspace",
    "mounts": [
        "source=anima-local,target=/home/vscode/.local,type=volume",
        "source=${localEnv:HOME}/Applications/blender,target=/home/vscode/Applications/blender,type=bind,consistency=cached"
    ],
    "postCreateCommand": "make install",
    "remoteUser": "vscode",
    
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.pylint",
                "ms-python.black-formatter",
                "ms-python.isort",
                "ms-vscode.makefile-tools",
                "Augment.vscode-augment"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/home/vscode/.local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "[python]": {
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": "explicit"
                    }
                },
                "python.testing.pytestEnabled": true,
                "python.testing.pytestArgs": ["tests"]
            }
        }
    }
}